<UserControl x:Class="BEServerManager.View.Home.HomeMainUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local1="clr-namespace:BEServerManager.View.Home.BEServer" xmlns:local2="clr-namespace:BEServerManager.View.Home.WebApi"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <local1:BEServerMainUserControl Grid.Column="0"/>
        <Border Grid.Column="1"  Background="#252526"/>
        <GridSplitter  Width="6" HorizontalAlignment="Center" Margin="0" Grid.Column="1"/>
        <local2:WebApiMainUserControl Grid.Column="2"/>
    </Grid>
</UserControl>
