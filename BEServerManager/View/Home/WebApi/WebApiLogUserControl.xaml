<UserControl x:Class="BEServerManager.View.Home.WebApi.WebApiLogUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BEServerManager.View.Home.WebApi"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#c6c6c6" Initialized="UserControl_Initialized">
    <Grid  Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Background="#494949" Margin="0,0,0,4" >
            <TextBlock Text="WEB API ログ"  Foreground="#ffffff" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
        </DockPanel>
        <TextBox Grid.Row="1" x:Name="HttpServetLogTextBox" Margin="2" IsReadOnly="True" TextWrapping="Wrap" Style="{StaticResource MCTextBoxStyle1}"/>
    </Grid>
</UserControl>
