<UserControl x:Class="BEServerManager.View.Home.WebApi.WebApiControlMenuUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BEServerManager.View.Template"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="{StaticResource MenuBackColor}">
    <Grid>
        <Grid>
            <StackPanel Orientation="Vertical" Margin="10,10,10,0">
                <local:ServerControlUserControl x:Name="WebApiServerUserCtrl" ServerNameText="WebApi" PowerButtonClickEventHandler = "WebApiServerChangeStatus" RenderTransformOrigin="0.5,0.5" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
